@model Api_Mvc.Models.Producto

@{
    ViewData["Title"] = "Edita producto";
}

<div>
    <p>@ViewBag.Message</p>
</div>
<!--https://localhost:7064/Producto/edit/id-->
<div class = "row">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id"/>
        <!--Guarda la fecha de alta-->
        <input type="hidden" asp-for="FechaDeAlta"/>
        <!--Validmos el producto producto-->
        <div asp-validation-sumary="ModelOnly" class="text-danger"></div>
        <!--Input del nombre del producto-->
        <div class"form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control"/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <!--Input de la descripcion del producto-->
        <div class"form-group">
            <label asp-for="Descripcion" class="control-label"></label>
            <input asp-for="Descripcion" class="form-control"/>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <!--Input de la Precio del producto-->
        <div class"form-group">
            <label asp-for="Precio" class="control-label"></label>
            <input asp-for="Precio" class="form-control"/>
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <!--No deberiamos mostrar el estado, esto es un ejmplo para ver como se comporta-->
        <div class"form-group-form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Activo"/>
                <!--Del modelo toma el Activo-->
                @Html.DisplayNameFor(model =>model.Activo)
            </label>
        </div>

        <div class"form-group">
            <input type="submit" value="Guardar cambios" class="btn btn-primary"/>

        </div>

    </form>

</div>